    <?php
      $images = array(
        "https://picsum.photos/seed/1/400/300",
        "https://picsum.photos/seed/2/400/300",
        "https://picsum.photos/seed/3/400/300",
        "https://picsum.photos/seed/4/400/300",
        "https://picsum.photos/seed/5/400/300"
      );
      $titles = array(
        "Card title 1",
        "Card title 2",
        "Card title 3",
        "Card title 4",
        "Card title 5"
      );
      $texts = array(
        "Lorem ipsum dolor sit amet, consectetur adipiscing elit.",
        "Praesent tempus quam non molestie accumsan.",
        "Donec sit amet magna in ipsum pulvinar lobortis.",
        "Aenean lobortis ipsum euismod justo porttitor, quis hendrerit felis finibus.",
        "Sed eget massa ac mauris suscipit vestibulum."
      );
      for ($i = 0; $i < 5; $i++) {
    ?>
    <div class="col">
      <div class="card h-100">
        <img src="<?php echo $images[$i]; ?>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><?php echo $titles[$i]; ?></h5>
          <p class="card-text"><?php echo $texts[$i]; ?></p>
        </div>
      </div>
    </div>
    <?php } ?>
